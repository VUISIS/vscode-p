{
    "name": "vscode-p",
    "displayName": "vscode-p",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:p"
    ],
    "main": "./out/extension/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "p",
                "aliases": [
                    "P",
                    "p"
                ],
                "extensions": [
                    ".p"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "p",
                "scopeName": "program",
                "path": "./syntaxes/p.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "compile": "npm run compile:extension",
        "compile:extension": "tsc -b",
        "antlr4ts": "antlr4ts -visitor -no-listener parser/PLexer.g4 && antlr4ts -visitor -no-listener parser/PParser.g4"
    },
    "dependencies": {
        "antlr4-c3": "^2.2.1",
        "antlr4ts": "^0.5.0-alpha.4"
    },
    "devDependencies": {
        "@types/node": "^17.0.14",
        "@types/vscode": "^1.63.2",
        "antlr4-c3": "^2.2.1",
        "antlr4ts": "^0.5.0-alpha.4",
        "antlr4ts-cli": "^0.5.0-alpha.4",
        "path": "^0.12.7",
        "ts-loader": "^9.2.6",
        "typescript": "^4.5.5"
    }
}
